<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context=".ui.register.RegisterSuccessActivity">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:background="@drawable/frame_r_w_shape"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="22dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="32dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_register_success"/>

            <TextView
                android:id="@+id/tv_update_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="恭喜您密码修改成功"
                android:textColor="#373737"
                android:textSize="16sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_update_finish"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/layout"
            android:layout_marginTop="22dp"
            android:background="@drawable/frame_r_b_shape"
            android:text="完成"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>