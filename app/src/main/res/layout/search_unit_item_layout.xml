<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#eaf2f5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/icon_exh"
                android:text="已参展"
                android:textColor="#0564b4"
                android:textSize="12sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/history_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_job_company"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:text="枣庄市金恒通农业新能源科技有限公司"
                android:textColor="@color/color_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/history_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_company"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/icon_job_category"
                android:drawablePadding="12dp"
                android:text="能源与环保"
                android:textColor="@color/color_text_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/history_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_category"
                android:layout_marginLeft="1.2dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/icon_mine_location"
                android:drawablePadding="12dp"
                android:text="1号馆A口正门"
                android:textColor="@color/color_text_color"
                android:textSize="12sp"/>

        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>