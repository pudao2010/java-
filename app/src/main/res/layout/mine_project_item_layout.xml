<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="14dp"
    app:contentPaddingLeft="14dp"
    app:contentPaddingRight="14dp"
    app:contentPaddingTop="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="枣庄市金恒通农业新能源科技有限公司"
                android:textColor="#2b2b2b"/>

            <ImageView
                android:id="@+id/icon_project_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/icon_project_edit"/>

        </FrameLayout>


        <TextView
            android:id="@+id/project_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout"
            android:layout_marginTop="16dp"
            android:text="技术需求   |   科技服务"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_category"
            android:layout_marginTop="6dp"
            android:text="2016-11-21"
            android:textColor="#999999"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>