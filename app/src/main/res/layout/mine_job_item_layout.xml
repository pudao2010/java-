<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="12dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="#2b2b2b"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/job_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/job_name"
            android:layout_alignParentRight="true"
            android:text="2016-01-01"
            android:textColor="#c9c9c9"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/job_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_name"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_job_company"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/job_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_company"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/icon_job_category"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#999999"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>