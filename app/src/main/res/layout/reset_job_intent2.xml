<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dedede"/>
    <android.support.v7.widget.CardView
        android:id="@+id/layout_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="14dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingTop="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mine_star_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#ff2828"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mine_star_8"
                android:text="自我评价"
                android:textColor="@color/color_text_color"
                android:textSize="14sp"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/personal_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="16dp"
                android:text="0/500"
                android:textColor="#969696"
                android:textSize="14sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</merge>