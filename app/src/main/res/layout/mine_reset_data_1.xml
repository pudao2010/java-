<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.qhzk.ciep.widget.MineItemEdit
        android:id="@+id/chinese_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemEditHint="请输入"
        app:itemEditKey="真实姓名" />
        <RelativeLayout
            android:paddingBottom="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mine_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#ff2828"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mine_star_2"
                android:text="性    别"
                android:textColor="@color/color_text_color"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/layout_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_radio_selector"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="#969696"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/drawable_radio_selector"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="#969696"
                    android:textSize="14sp" />

            </RadioGroup>

        </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_line_color" />

    <com.qhzk.ciep.widget.MineItemView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemKey="出生年月" />

    <com.qhzk.ciep.widget.MineItemEdit
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemEditHint="请输入"
        app:itemEditKey="手机号码" />

    <com.qhzk.ciep.widget.MineItemEdit
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemEditHint="请输入"
        app:itemEditKey="电子邮箱" />

    <com.qhzk.ciep.widget.MineItemView
        android:id="@+id/work_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemKey="工作年限" />

    <com.qhzk.ciep.widget.MineItemView
        android:id="@+id/current_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemKey="目前薪资" />

    <com.qhzk.ciep.widget.MineItemView
        android:id="@+id/current_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemKey="当前城市" />

    <com.qhzk.ciep.widget.MineItemEdit
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemEditHint="请输入"
        app:itemEditKey="身   高" />

        <RelativeLayout
            android:paddingBottom="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mine_star_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#ff2828"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mine_star_10"
                android:text="婚姻状态"
                android:textColor="@color/color_text_color"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/layout_radio_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/unmarried"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_radio_selector"
                    android:gravity="center"
                    android:text="未婚"
                    android:textColor="#969696"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/married"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/drawable_radio_selector"
                    android:gravity="center"
                    android:text="已婚"
                    android:textColor="#969696"
                    android:textSize="14sp" />
            </RadioGroup>
        </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_line_color" />

    <com.qhzk.ciep.widget.MineItemView
        app:itemKey="国    籍"
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.qhzk.ciep.widget.MineItemEdit
        android:id="@+id/wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemEditHint="请输入"
        app:itemEditKey="微信号" />

</merge>