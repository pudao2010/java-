<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="28dp">

            <TextView
                android:id="@+id/info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1填写个人信息    >    2单位及学历"
                android:textColor="#fa4646"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/info_1"
                android:text="    >    3选择板块"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/info_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/info_1"
                android:layout_below="@id/info_1"
                android:layout_marginTop="24dp"
                android:text="注 ：请如实填写你的个人信息 ( '*' 号为必填项)"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dedede" />

        <com.qhzk.ciep.widget.MineItemEdit
            android:id="@+id/work_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemEditHint="请输入"
            app:itemEditKey="工作单位" />

        <com.qhzk.ciep.widget.MineItemEdit
            android:id="@+id/position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemEditHint="请输入"
            app:itemEditKey="职        位" />

        <com.qhzk.ciep.widget.MineItemView
            android:id="@+id/industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemKey="行业领域" />

        <com.qhzk.ciep.widget.MineItemView
            android:id="@+id/unit_nature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemKey="单位性质" />

        <com.qhzk.ciep.widget.MineItemView
            android:id="@+id/unit_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemKey="单位规模" />

        <com.qhzk.ciep.widget.MineItemEdit
            android:id="@+id/college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemEditHint="请输入"
            app:itemEditKey="毕业学院" />

        <com.qhzk.ciep.widget.MineItemView
            android:id="@+id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemKey="学历学位" />

        <com.qhzk.ciep.widget.MineItemView
            android:id="@+id/major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemKey="所学专业" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/mine_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#ff2828"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mine_star_4"
                android:text="需要接待服务"
                android:textColor="@color/color_text_color"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radio_needservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_radio_selector"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="#969696"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/drawable_radio_selector"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="#969696"
                    android:textSize="14sp" />

            </RadioGroup>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ececec" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:contentPaddingBottom="14dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingTop="14dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mine_star_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="*"
                    android:textColor="#ff2828"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mine_star_17_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/mine_star_17"
                    android:text="来访目的"
                    android:textColor="@color/color_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/mine_star_17_text"
                    android:text="(多选)"
                    android:textColor="#969696"
                    android:textSize="14sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="14dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <CheckBox
                android:id="@+id/find_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/drawable_radio_selector"
                android:gravity="center_vertical|left"
                android:text="寻找工作"
                android:textColor="#969696"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/find_talent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/drawable_radio_selector"
                android:gravity="center_vertical|left"
                android:text="寻找人才"
                android:textColor="#969696"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/project_dock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/drawable_radio_selector"
                android:gravity="center_vertical|left"
                android:text="项目对接"
                android:textColor="#969696"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp">

            <CheckBox
                android:id="@+id/technical_exchange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/drawable_radio_selector"
                android:gravity="center_vertical|left"
                android:text="技术交流"
                android:textColor="#969696"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/find_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/drawable_radio_selector"
                android:gravity="center_vertical|left"
                android:text="寻找商机"
                android:textColor="#969696"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/drawable_radio_selector"
                android:gravity="center_vertical|left"
                android:text="其他"
                android:textColor="#969696"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/layout"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/frame_r_b_shape"
            android:text="下一步"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>