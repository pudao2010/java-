<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="取消" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="确定"
                android:textColor="@android:color/holo_blue_light" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.qhzk.ciep.view.WheelView
                android:id="@+id/wheelview_fromyear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="6"
                app:lineColor="#9C9C9C"
                app:maskHeight="32dp"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHeight="40dp" />

            <com.qhzk.ciep.view.WheelView
                android:id="@+id/wheelview_frommonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="6"
                app:lineColor="#9C9C9C"
                app:maskHeight="32dp"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHeight="40dp" />
            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="至"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <com.qhzk.ciep.view.WheelView
                android:id="@+id/wheelview_endyear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="6"
                app:lineColor="#9C9C9C"
                app:maskHeight="32dp"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHeight="40dp" />
            <com.qhzk.ciep.view.WheelView
                android:id="@+id/wheelview_endmonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemNumber="6"
                app:lineColor="#9C9C9C"
                app:maskHeight="32dp"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHeight="40dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>