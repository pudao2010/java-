<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="12dp"
    app:contentPaddingRight="12dp"
    app:contentPaddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/history_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_job_company"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="枣庄市金恒通农业新能源科技有限公司"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/history_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_company"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/icon_job_category"
            android:drawablePadding="12dp"
            android:text="能源与环保"
            android:textColor="@color/color_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/history_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_category"
            android:layout_marginLeft="1.2dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/icon_mine_location"
            android:drawablePadding="12dp"
            android:text="1号馆A口正门"
            android:textColor="@color/color_text_color"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>