<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ececec"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="14dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingTop="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mine_star_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#ff2828"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mine_star_16"
                android:text="工作描述"
                android:textColor="@color/color_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:text="0/500"
                android:textColor="#969696"
                android:textSize="14sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="14dp"
        android:background="#dedede"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入工作描述"
            android:maxLength="500"
            android:maxLines="7"
            android:minLines="7"
            android:textColor="@color/color_text_color"
            android:textColorHint="#969696"
            android:textSize="14sp"/>

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ececec"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="14dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingTop="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mine_star_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#ff2828"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/mine_star_17_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mine_star_17"
                android:text="来访目的"
                android:textColor="@color/color_text_color"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/mine_star_17_text"
                android:text="(多选)"
                android:textColor="#969696"
                android:textSize="14sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="14dp"
        android:background="#dedede"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp">

        <CheckBox
            android:id="@+id/find_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/drawable_radio_selector"
            android:gravity="center_vertical|left"
            android:text="寻找工作"
            android:textColor="#969696"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/find_talent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/drawable_radio_selector"
            android:gravity="center_vertical|left"
            android:text="寻找人才"
            android:textColor="#969696"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/project_dock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/drawable_radio_selector"
            android:gravity="center_vertical|left"
            android:text="项目对接"
            android:textColor="#969696"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp">

        <CheckBox
            android:id="@+id/technical_exchange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/drawable_radio_selector"
            android:gravity="center_vertical|left"
            android:text="技术交流"
            android:textColor="#969696"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/find_business"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/drawable_radio_selector"
            android:gravity="center_vertical|left"
            android:text="寻找商机"
            android:textColor="#969696"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/drawable_radio_selector"
            android:gravity="center_vertical|left"
            android:text="其他"
            android:textColor="#969696"
            android:textSize="14sp"/>

    </LinearLayout>

</merge>